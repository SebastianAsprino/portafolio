<script>
  const svgs = document.querySelectorAll('.proyecto svg');
  const svgContainer = document.getElementById('svg-container');
  let currentIndex = 0;

  function showNextSvg() {
    svgContainer.innerHTML = '';
    svgContainer.appendChild(svgs[currentIndex].cloneNode(true));
    currentIndex = (currentIndex + 1) % svgs.length;
  }

  showNextSvg(); // Mostrar el primer SVG inmediatamente

  setInterval(showNextSvg, 1000); // Cambiar el SVG cada 3 segundos
</script>






